[Unit]
Description=Setup Podman/libpod settings
# Require Binaries to be available
Requires=udm-tools-install.service
After=udm-tools-install.service

Documentation=https://udm-tools.prasadt.com/services

[Service]
Type=oneshot
ExecStart=/sbin/ssh-proxy udmctl libpod-settings
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
WantedBy=udm-tools-container-hooks.service
